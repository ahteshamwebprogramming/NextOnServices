@using GRP
@namespace GRP.WebUI.Views
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, GRP

@model GRP.Infrastructure.ViewModels.Account.ChangePasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>GRP Login</title>
    <!-- plugins:css -->

    <link rel="stylesheet" href="~/theme/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/theme/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/theme/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/theme/css/vertical-layout-light/style.css">
    <!-- endinject -->
    @*<link rel="shortcut icon" href="~/theme/images/favicon.png" />*@
    <style rel="stylesheet">
        .brand-logo {
            text-align: center;
            margin: 0 !important;
        }

            .brand-logo img {
                width: 290px !important;
            }

        .main_title {
            padding: 20px 0 20px 0;
            text-align: center;
        }

    </style>
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                @*<img src="~/theme/images/logo.svg" alt="logo">*@
                                @*<img src="~/LoginRoot/NextonLogo.png" style="height:50px;mix-blend-mode: multiply;" />*@
                                <img src="/grp/Images/img/logo.jpg" />
                            </div>
                            <h4 class="main_title">Change Password</h4>
                            @*<h6 class="font-weight-light">Sign in to continue.</h6>*@
                            <form method="post" action="/GRP/Account/ChangePassword">
                                <div class="form-group">
                                    <label>Old Password</label>
                                    <input type="password" class="form-control form-control-lg" placeholder="Old Password" asp-for="OldPassword">
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="label-control">Password</label>
                                    <input type="password" class="form-control form-control-lg" placeholder="Password" asp-for="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="label-control">Confirm Password</label>
                                    <input type="password" class="form-control form-control-lg" placeholder="Confirm Password" asp-for="ConfirmPassword">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="mt-3">
                                    <input type="hidden" asp-for="MID" />
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Submit</button>
                                    <button type="button" class="btn btn-block btn-danger btn-lg font-weight-medium auth-form-btn" onclick="Cancel()">Cancel</button>
                                </div>

                                @* <div class="text-center mt-4 font-weight-light">
                                Already have an account? <a href="/GRP/Account/Login" class="text-primary">Login</a>
                                </div>*@

                                @Html.ValidationSummary("" ,new{@class = "text-danger"})
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/theme/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/theme/js/off-canvas.js"></script>
    <script src="~/theme/js/hoverable-collapse.js"></script>
    <script src="~/theme/js/template.js"></script>
    <script src="~/theme/js/settings.js"></script>
    <script src="~/theme/js/todolist.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

        });
        function Cancel() {
            history.go(-1);
        }
    </script>

    <!-- endinject -->
</body>

</html>
