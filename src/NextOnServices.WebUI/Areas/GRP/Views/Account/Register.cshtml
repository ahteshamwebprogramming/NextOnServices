<body>
    

                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                @*<img src="~/theme/images/logo.svg" alt="logo">*@
                                @*<img src="~/LoginRoot/NextonLogo.png" style="height:50px;mix-blend-mode: multiply;" />*@
                                <a href="/GRP/Home/Index"> <img src="/grp/Images/img/logo.jpg" /></a>
                            </div>
                            <h4 class="main_title">New here?</h4>
                            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                            <form method="post" action="/GRP/Account/Register">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="FirstName" placeholder="First Name">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="LastName" placeholder="Last Name">
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" asp-for="EmailId" placeholder="Email">
                                    <span asp-validation-for="EmailId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <select class="form-control form-control-lg" asp-for="Gender">
                                        <option value="0">Choose Gender</option>
                                        <option value="1">Male</option>
                                        <option value="2">Female</option>
                                        <option value="3">Other</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="date" class="form-control form-control-lg" asp-for="DateOfBirth">
                                </div>
                                <div class="form-group">
                                    <select class="form-control form-control-lg" asp-for="CountryId">
                                        <option value="0">Choose Country</option>
                                        @{
                                            if (Model != null)
                                            {
                                                if (Model.Countries != null)
                                                {
                                                    foreach (var item in Model.Countries)
                                                    {
                                                        <option value="@item.CountryId">@item.Country</option>
                                                    }
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted" style="display: inline;">
                                            <input type="checkbox" class="form-check-input" asp-for="AgreedToTACPP">
                                            I agree to all
                                        </label>
                                        <label class="form-check-label text-muted" style="display:inline;margin-left:0px;">
                                            <a href="/GRP/Legal/TermsOfServices">Terms Of Services</a> and <a href="/GRP/Legal/PrivacyPolicy">Privacy Policy</a>
                                        </label>
                                    </div>
                                    <span asp-validation-for="AgreedToTACPP" class="text-danger"></span>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="../../index.html">SIGN UP</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="/GRP/Account/Login" class="text-primary">Login</a>
                                </div>
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                            </form>
                        </div>
                    </div>


               
