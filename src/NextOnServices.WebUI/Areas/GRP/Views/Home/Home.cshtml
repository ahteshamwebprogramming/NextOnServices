                font-weight: 600;
            }

            .leftBlock .nav_tab ul li span {
                background: #476D7B;
                color: #fff;
                padding: 3px;
                margin: 0 0 0 4px;
                border-radius: 8px;
            }

    .scrollable_wrap {
        height: 220px;
        overflow-y: scroll;
        border: #ccc solid 1px;
        padding: 10px;
        border-radius: 10px;
    }

    .heading_title {
        border-bottom: #ccc solid 1px;
        padding-bottom: 10px;
        margin-bottom: 10px;
    }
