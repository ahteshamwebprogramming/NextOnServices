            }

            .leftBlock .point_table ul li:last-child {
                text-align: right;
            }

            .leftBlock .point_table ul li {
                width: 46%;
                margin: 0 auto;
                padding: 10px 2%;
                float: left;
                color: #000;
                text-align: center;
                list-style-type: none;
            }

                .leftBlock .point_table ul li span {
                    width: 100px;
                    background: #476D7B;
                    color: #fff;
                    padding: 4px;
                    margin: 0 auto;
                    border-radius: 6px;
                }

    .leftBlock .nav_tab {
        width: 100%;
        margin: 0 auto;
        padding: 0;
    }

        .leftBlock .nav_tab ul li {
            width: 100%;
            margin: 0 auto;
            padding: 0 0 15px 0;
            line-height: 2;
            list-style-type: none;
            text-align: left;
        }

            .leftBlock .nav_tab ul li a {
