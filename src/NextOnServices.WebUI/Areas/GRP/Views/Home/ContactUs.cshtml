@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Areas/GRP/Views/Shared/_LayoutWOMenus.cshtml";
}

<style>
    .border-1 {
        border: #e7e7e7 solid 2px;
    }

    .flow_count {
        font-size: 29px;
        font-weight: 900;
        margin-bottom: 10px;
        display: block;
        color: #504b8e;
    }

    .surverys_card span {
        font-size: 29px;
        font-weight: 900;
        display: block;
        color: #504b8e;
        text-align: center;
        background: #f5f7ff;
        padding: 20px;
        margin: -17px -17px 11px -17px;
        border-radius: 19px 20px 0 0;
    }

    .surverys_card {
        padding: 20px;
        margin-bottom: 20px;
    }

        .surverys_card ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .surverys_card ul li {
                margin-bottom: 10px;
                font-size: 16px;
            }

                .surverys_card ul li i {
                    position: relative;
                    top: 3px;
                    color: #4B49AC
                }

    .owl-theme .owl-nav {
        display: block !important;
    }

    .mission-vision span {
        font-size: 52px;
        color: #4b49ac;
    }

    .card .card-title {
        font-size: 22px;
    }

    .list {
        margin: 0;
        padding: : 0;
        list-style: none;
    }

        .list li {
            display: flex;
            padding: 30px 0 30px 0;
            border-bottom: #ccc solid 1px;
            justify-content: start;
            align-items: center;
        }

            .list li span {
                color: #4b49ac;
                font-weight: 700;
            }

            .list li img {
                width: 60px;
                margin-right: 30px;
            }

    .main-panel {
        width: 100% !important;
    }
</style>

<div class="col-lg-6 mx-auto">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row ">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Contact Us</h4>

                            <form id="ContactUsForm">
                                <div class="form-group">
                                    <label for="Name">Name</label>
                                    <input type="text" class="form-control" name="Name" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <label for="ContactNo">Contact No</label>
                                    <input type="email" class="form-control" name="ContactNo" placeholder="Contact No">
                                </div>
                                <div class="form-group">
                                    <label for="EmailId">Email Id</label>
                                    <input type="email" class="form-control" name="EmailId" placeholder="Email">
                                </div>

                                <div class="form-group">
                                    <label for="Message">Message</label>
                                    <textarea class="form-control" name="Message" rows="4"></textarea>
                                </div>
                                <input type="button" class="btn btn-primary mr-2" value="Submit" onclick="SubmitDetails()" />
                                <button type="reset" class="btn btn-danger mr-2 reset">Reset</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <!-- main-panel ends -->
    </div>
</div>

@section scripts {

    <script type="text/javascript">

        function SubmitDetails() {
            var inputDTO = {
                Name: $("[name='Name']").val(),
                ContactNo: $("[name='ContactNo']").val(),
                EmailId: $("[name='EmailId']").val(),
                Message: $("[name='Message']").val()
            };
            BlockUI();
            $.ajax({
                type: "POST",
                url: "/GRP/Home/SubmitContactUsDetails",
                contentType: 'application/json',
                data: JSON.stringify(inputDTO),
                success: function (data) {
                    UnblockUI();
                    $successalert("Success!", "");
                    $("#ContactUsForm").find(".reset").click();
                },
                error: function (error) {
                    $erroralert("Error!", error.responseText + '!');
                    UnblockUI();
                }
            });
        }




    </script>
}


