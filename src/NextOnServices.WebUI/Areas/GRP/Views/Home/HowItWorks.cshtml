                    <div class="card">
                        <div class="card-body">
                            <!-- About 1 - Bootstrap Brain Component -->
                            <h3>Global Research Panels</h3>
                            <ul class="list">
                                <li>
                                    <div class="content"><img src="/grp/icon1.svg"></div>
                                    <div class="c_content">
                                        <h4>Step 1- <span>Sign Up</span></h4>
