@{
    ViewData["Title"] = "Points Pending";
    Layout = "~/Areas/GRP/Views/Shared/_Layout.cshtml";
}

@model List<GRP.Infrastructure.ViewModels.Survey.EarnedPointHistoryViewModel>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="row">
                <div class="col-md-12">
                    <div class="card-body">
                        <div class="row">
                            <div class="offset-md-0 col-md-12">
                                <div class="x_panel">
                                    <div class="x_title">
                                        <h2>
                                            Point History - Tabulating
                                            @*<small style="color:#17a2b8">Below is the list of pending points</small>*@
                                        </h2>
                                        <ul class="nav navbar-right panel_toolbox">
                                            @*<li><a href="/GRP/Survey/Add">Create Survey</a></li>*@
                                        </ul>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="x_content">
                                        <br />
                                        <div class="row">
                                            <div class="col-md-12">
                                                <table class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>Category</th>
                                                            <th>Survey Name</th>
                                                            <th>Status</th>
                                                            <th>Points</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @{
                                                            if (Model != null)
                                                            {
                                                                foreach (var item in Model)
                                                                {
                                                                    <tr>
                                                                        <td>@item.Source</td>
                                                                        <td>@item.SourceRef</td>
                                                                        <td>@item.TransType</td>
                                                                        <td>@item.Points</td>
                                                                    </tr>
                                                                }
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            //$("table").DataTable({
