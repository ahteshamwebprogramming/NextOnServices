@model NextOnServices.VT.Infrastructure.ViewModels.Client.ClientViewModel
@using System.Globalization
@{
    ViewData["Title"] = "Client Preview";
    Layout = "~/Areas/VT/Views/Shared/_Layout.cshtml";
    var client = Model?.Client;
    Func<string?, string> displayText = value => string.IsNullOrWhiteSpace(value) ? "-" : value!;
    Func<double?, string> displayDouble = value => value.HasValue ? value.Value.ToString("0.##", CultureInfo.InvariantCulture) : "-";
    Func<int?, string> clientStatusText = status => status == 1 ? "Active" : "Inactive";
    Func<string?, string> statusBadge = status =>
    {
        if (string.IsNullOrWhiteSpace(status))
        {
            return "badge bg-light text-dark";
        }

        var normalized = status!.Trim().ToLowerInvariant();
        if (normalized.Contains("award"))
        {
            return "badge bg-success";
        }

        if (normalized.Contains("cancel"))
        {
            return "badge bg-danger";
        }

        if (normalized.Contains("hold") || normalized.Contains("pause"))
        {
            return "badge bg-warning text-dark";
        }

        if (normalized.Contains("live") || normalized.Contains("running"))
        {
            return "badge bg-primary";
        }

        return "badge bg-info text-dark";
    };

    string createdOn = client?.CreationDate.HasValue == true
        ? client.CreationDate.Value.ToString("dd MMM yyyy")
        : "-";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
                    <div>
                        <h4 class="card-title mb-1">Client Preview</h4>
                        <p class="text-muted mb-0">A consolidated view of the client profile and their recent delivery details.</p>
                    </div>
                    <div class="d-flex flex-wrap gap-2">
                        <a class="btn btn-light" href="@Url.Action("ClientList", "Client", new { area = "VT" })">
                            <i class="mdi mdi-chevron-left me-1"></i> Back to Clients
                        </a>
                        @if (!string.IsNullOrEmpty(client?.encClientId))
                        {
                            <a class="btn btn-primary" href="@Url.Action("AddClient", "Client", new { area = "VT", eClientId = client.encClientId })">
                                <i class="mdi mdi-pencil-outline me-1"></i> Edit Client
                            </a>
                        }
                    </div>
                </div>

                <hr class="my-4" />

                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="border rounded p-3 h-100">
                            <span class="text-muted text-uppercase small">Client Name</span>
                            <div class="fs-5 fw-semibold text-dark mt-1">@displayText(client?.Company)</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-3 h-100">
                            <span class="text-muted text-uppercase small">Contact Person</span>
                            <div class="fs-5 fw-semibold text-dark mt-1">@displayText(client?.Cperson)</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-3 h-100">
                            <span class="text-muted text-uppercase small">Contact Number</span>
                            <div class="fs-5 fw-semibold text-dark mt-1">@displayText(client?.Cnumber)</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-3 h-100">
                            <span class="text-muted text-uppercase small">Email</span>
                            <div class="fs-5 fw-semibold text-dark mt-1">
                                @if (string.IsNullOrWhiteSpace(client?.Cemail))
                                {
                                    @:"-"
                                }
                                else
                                {
                                    <a href="mailto:@client!.Cemail" class="text-decoration-none">@client.Cemail</a>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-3 h-100">
                            <span class="text-muted text-uppercase small">Country</span>
                            <div class="fs-5 fw-semibold text-dark mt-1">@displayText(client?.Country)</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-3 h-100">
                            <span class="text-muted text-uppercase small">Status</span>
                            <div class="mt-2">
                                <span class="badge @(client?.IsActive == 1 ? "bg-success" : "bg-secondary")">@clientStatusText(client?.IsActive)</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-3 h-100">
                            <span class="text-muted text-uppercase small">Created On</span>
                            <div class="fs-5 fw-semibold text-dark mt-1">@createdOn</div>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <span class="text-muted text-uppercase small d-block mb-2">Notes</span>
                    <p class="mb-0">@displayText(client?.Notes)</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
                    <div>
                        <h4 class="card-title mb-1">Client Delivery Details</h4>
                        <p class="text-muted mb-0">Summary of ongoing and historical projects for the client.</p>
                    </div>
                </div>

                @if (Model?.ProjectSummaries != null && Model.ProjectSummaries.Count > 0)
                {
                    <div class="table-responsive mt-3">
                        <table class="table table-striped table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Project Name</th>
                                    <th>Country</th>
                                    <th class="text-center">Quota</th>
                                    <th class="text-center">LOI</th>
                                    <th class="text-center">CPI</th>
                                    <th class="text-center">IRate</th>
                                    <th class="text-center">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var project in Model.ProjectSummaries)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(project.EncProjectId))
                                            {
                                                <a class="text-decoration-none fw-semibold" href="@Url.Action("AddProject", "Projects", new { area = "VT", eProjectId = project.EncProjectId })">
                                                    @displayText(project.ProjectName)
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="fw-semibold">@displayText(project.ProjectName)</span>
                                            }
                                        </td>
                                        <td>@displayText(project.Country)</td>
                                        <td class="text-center">@displayText(project.Quota)</td>
                                        <td class="text-center">@displayText(project.Loi)</td>
                                        <td class="text-center">@displayDouble(project.Cpi)</td>
                                        <td class="text-center">@displayText(project.Irate)</td>
                                        <td class="text-center">
                                            <span class="@statusBadge(project.StatusLabel)">@displayText(project.StatusLabel)</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-secondary mt-4 mb-0" role="alert">
                        No delivery details are available for this client yet.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
