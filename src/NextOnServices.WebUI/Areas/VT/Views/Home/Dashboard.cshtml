@model NextOnServices.Infrastructure.ViewModels.Dashboard.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/VT/Views/Shared/_Layout.cshtml";
}

<link href="~/css/custmahte.css" rel="stylesheet" />
<link href="~/css/tooltip.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css" />
<style>
    .bordertophighlight {
        border-top: 1px solid #f1f1f1;
        box-shadow: 0px 1px 4px 1px #f1f1f1;
        padding: 12px;
    }

    .tooltip1 {
        border-bottom: 0px dotted black !important;
    }

    .container1_ppd {
        display: block;
        position: relative;
        padding-left: 0px;
        margin-bottom: 0px;
        cursor: pointer;
        font-size: 19px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .checkmark_ppd {
        position: absolute;
        top: 0px;
        left: 0;
        height: 20px;
        width: 20px;
        background-color: #eee;
    }

    .select2-container--default .select2-selection--single {
        padding: 0px;
    }

    span.select2-container--default {
        width: 100% !important;
    }

    .card-body .menu-icon img {
        width: 29px;
        margin-bottom: 12px;
    }

    .card-body{position:relative;}
    .card-body  .bttmText {
        position: absolute;
            bottom: 10px;
            right: 16px;
        font-size: 14px;
        }

    .fs-30text {
        font-size: 40px !important;
        font-weight: 800;
    }

    select.dashboard-filter + span.select2 .select2-selection--single {
        border-radius: 14px;
        border: 1px solid #d0d7ff;
        padding: 8px 44px 8px 18px;
        min-height: 44px;
        display: flex;
        align-items: center;
        background: linear-gradient(135deg, #ffffff 0%, #f6f9ff 100%);
        box-shadow: 0 8px 20px rgba(103, 119, 239, 0.12);
        transition: all 0.2s ease-in-out;
    }

    select.dashboard-filter + span.select2 .select2-selection--single:hover,
    select.dashboard-filter + span.select2.select2-container--open .select2-selection--single,
    select.dashboard-filter + span.select2.select2-container--focus .select2-selection--single {
        border-color: #8795ff;
        box-shadow: 0 10px 24px rgba(103, 119, 239, 0.2);
    }

    select.dashboard-filter + span.select2 .select2-selection__rendered {
        color: #1f2430;
        font-weight: 600;
        letter-spacing: 0.3px;
        padding-left: 0;
    }

    select.dashboard-filter + span.select2 .select2-selection__placeholder {
        color: #7c8499;
        font-weight: 500;
    }

    select.dashboard-filter + span.select2 .select2-selection__arrow {
        height: 100%;
        width: 42px;
        background: linear-gradient(135deg, #8795ff 0%, #6f7bff 100%);
        border-radius: 0 12px 12px 0;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background 0.2s ease-in-out;
    }

    select.dashboard-filter + span.select2 .select2-selection__arrow b {
        border-color: #fff transparent transparent transparent;
        border-width: 6px 5px 0 5px;
        margin-top: 0;
    }

    select.dashboard-filter + span.select2.select2-container--open .select2-selection__arrow {
        background: linear-gradient(135deg, #6f7bff 0%, #4c5bff 100%);
    }

    .select2-container--default .select2-dropdown {
        border: 1px solid #d0d7ff;
        border-radius: 14px;
        box-shadow: 0 16px 34px rgba(103, 119, 239, 0.18);
        padding: 12px 0;
        overflow: hidden;
    }

    .select2-container--default .select2-results > .select2-results__options {
        max-height: 280px;
        padding: 0 4px;
    }

    .select2-container--default .select2-results__option {
        border-radius: 10px;
        margin: 4px 8px;
        padding: 12px 16px;
        font-weight: 500;
        color: #3c4461;
        transition: background 0.15s ease, color 0.15s ease, transform 0.15s ease;
    }

    .select2-container--default .select2-results__option--highlighted.select2-results__option--selectable {
        background: linear-gradient(135deg, #8795ff 0%, #6f7bff 100%);
        color: #fff;
        transform: translateY(-1px);
        box-shadow: 0 8px 16px rgba(103, 119, 239, 0.25);
    }

    .select2-container--default .select2-results__option--selected {
        background: rgba(103, 119, 239, 0.12);
        color: #2f3d66;
        font-weight: 600;
    }



</style>


