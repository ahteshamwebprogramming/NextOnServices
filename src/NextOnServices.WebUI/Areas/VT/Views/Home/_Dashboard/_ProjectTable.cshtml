@model NextOnServices.Infrastructure.ViewModels.Dashboard.DashboardViewModel

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css">
<style>
    .badge {
        width: 90px;
    }

    .tblstatus {
        cursor: pointer;
    }

    .badge.tblstatus {
        border: none;
        outline: none;
    }

    .badge.tblstatus:focus {
        box-shadow: none;
    }
</style>
<table class="table table-striped table-borderless">
    <thead>
        <tr>
            <th style="display:none">ID</th>
            <th>PNo</th>
            <th>PName</th>
            <th>Client</th>
            <th>PM</th>
            <th>Country</th>
            <th>LOI</th>
            <th>CPI</th>
            <th>IRate</th>
            <th>Status</th>
            <th>Total</th>
            <th>CO</th>
            <th>TR</th>
            <th>OQ</th>
            <th>ST</th>
            <th>FE</th>
            <th>IC</th>
            <th>IR</th>
            <th>LOI</th>
            <th><i class="mdi mdi-flag-variant"></i></th>

        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null)
            {
                if (Model.ListOfProjects != null)
                {
                    if (Model.ListOfProjects.Count() > 0)
                    {

                        foreach (var item in Model.ListOfProjects)
                        {
                            <tr>
                                <td style="display:none">@item.ProjectId</td>
                                <td><a href="/VT/Home/ProjectPage?projectId=@item.ProjectId">@item.PNO</a></td>
                                <td>@item.PNAME</td>
                                <td>@(item.CLIENT)</td>
                                <td>@(item.PM)</td>
                                <td>@(item.COUNTRY)</td>
                                <td class="font-weight-bold">@item.LOI</td>
                                <td class="font-weight-bold">$@(item.CPI)</td>
                                <td class="font-weight-bold">@(item.IRate)%</td>
                                <td class="font-weight-medium">                                    
                                    @{
                                        if (item.STATUS == 1)
                                        {
                                            <button type="button" class="badge badge-danger hvr-grow tblstatus" onclick="openChangeStatusBox(1,@item.ProjectId,'Closed')">Closed</button>
                                        }
                                        if (item.STATUS == 2)
                                        {
                                            <button type="button" class="badge badge-success hvr-grow tblstatus" onclick="openChangeStatusBox(2,@item.ProjectId,'Live')">Live</button>
                                        }
                                        if (item.STATUS == 3)
                                        {
                                            <button type="button" class="badge badge-warning hvr-grow tblstatus" onclick="openChangeStatusBox(3,@item.ProjectId,'On Hold')">On Hold</button>
                                        }
                                        if (item.STATUS == 4)
                                        {
                                            <button type="button" class="badge badge-danger hvr-grow tblstatus" onclick="openChangeStatusBox(4,@item.ProjectId,'Cancelled')">Cancelled</button>
                                        }
                                        if (item.STATUS == 5)
                                        {
                                            <button type="button" class="badge badge-info hvr-grow tblstatus" onclick="openChangeStatusBox(5,@item.ProjectId,'Awarded')">Awarded</button>
                                        }
                                        if (item.STATUS == 6)
                                        {
                                            <button type="button" class="badge badge-default hvr-grow tblstatus" onclick="openChangeStatusBox(6,@item.ProjectId,'Invoiced')">Invoiced</button>
                                        }
                                    }
                                </td>
                                <td class="font-weight-bold">@(item.TOTAL)</td>
                                <td class="font-weight-bold">@(item.CO)</td>
                                <td class="font-weight-bold">@(item.TR)</td>
                                <td class="font-weight-bold">@(item.OQ)</td>
                                <td class="font-weight-bold">@(item.ST)</td>
                                <td class="font-weight-bold">@(item.FE)</td>
                                <td class="font-weight-bold">@(item.IC)</td>
                                <td class="font-weight-bold">@(item.ActIR)%</td>
                                <td class="font-weight-bold">@(item.ActLOI)</td>
                                <td class="font-weight-bold">
                                    @{
                                        if (item.Flag != "")
                                        {
                                            <i class='mdi mdi-flag-variant' style="color:@item.Flag"></i>
                                        }
                                    }
                                </td>
                            </tr>
                        }

                    }
                }

            }
        }

    </tbody>
</table>

<!-- jQuery & DataTables JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>

<!-- For Excel Export -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>

<!-- For CSV Export (Optional) -->
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('table').DataTable({
            "aaSorting": [],
            dom: 'Bfrtip', // B = Buttons, f = Filter, r = Processing, t = Table, i = Info, p = Pagination
            buttons: [
                {
                    extend: 'excelHtml5',
                    text: 'Export to Excel',
                    title: 'Data_Export' // File name
                },
                {
                    extend: 'csvHtml5',
                    text: 'Export to CSV',
                    title: 'Data_Export' // File name
                }
            ]
        });
    });
</script>