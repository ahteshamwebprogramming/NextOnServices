                                                {
                                                    if (Model.FractionComplete1 != null)
                                                    {
                                                        if (Model.FractionComplete1.ExpectedIR != null)
                                                        {
                                                            <span> @Model.FractionComplete1.ExpectedIR</span>
                                                        }
                                                    }
