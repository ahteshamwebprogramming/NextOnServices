    <style>
        :root {
            --panel-bg: rgba(255,255,255,0.04);
            --panel-border: rgba(255,255,255,0.10);
            --accent: #00ffff;
        }

        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Inter', sans-serif;
            background: #0a0a0a;
            color: #fff;
        }

        #container {
            position: relative;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
        }

        #three-canvas {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        .overlay {
            position: absolute;
            inset: 0;
            z-index: 2;
            display: flex;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(8px);
        }

        .panel {
            width: 360px;
            max-width: 94%;
            background: var(--panel-bg);
            border: 1px solid var(--panel-border);
            border-radius: 18px;
            padding: 34px;
            text-align: center;
            box-shadow: 0 8px 32px rgba(0,0,0,0.6);
            transition: transform .25s ease;
        }

            .panel:hover {
                transform: perspective(1000px) rotateY(3.5deg);
            }

        .logo {
            font-size: 1.6rem;
            color: var(--accent);
            margin-bottom: 14px;
            font-weight: 600;
        }

        .form-control.vt-input {
            width: 100%;
            padding: 12px 14px;
            margin: 10px 0;
            border-radius: 10px;
            border: 1px solid rgba(0,255,255,0.12);
            background: rgba(0,0,0,0.45);
            color: #fff;
            font-size: 0.95rem;
        }

            .form-control.vt-input:focus {
                outline: none;
                border-color: var(--accent);
                box-shadow: 0 0 16px rgba(0,255,255,0.12);
            }

        .submit-btn {
            width: 100%;
            padding: 12px;
            margin-top: 12px;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            background: linear-gradient(45deg, #00ffff, #ffd700);
            color: #000;
            font-weight: 700;
        }

            .submit-btn:hover {
                transform: scale(1.02);
            }

        .footer {
            margin-top: 12px;
            font-size: 0.9rem;
            color: rgba(255,255,255,0.72);
        }

        .text-danger {
            color: red;
            margin-top: 8px;
            font-size: 0.9rem;
        }

            .text-danger ul {
                list-style: none;
                padding-left: 0;
                margin: 0;
                font-size: 13px;
            }

        @@media (max-width: 480px) {
            .panel

        {
            padding: 20px;
            width: 92%;
        }

        .logo {
            font-size: 1.3rem;
        }

        }
