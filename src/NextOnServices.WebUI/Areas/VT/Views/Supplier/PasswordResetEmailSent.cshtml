@{
    Layout = null;
}


@{
    ViewBag.Title = "Reset Password Email Sent";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Body Styling */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #ecf0f1;
            color: #2C3E50;
        }

        .success-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .success-box {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 50px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 450px;
            width: 100%;
        }

            .success-box h1 {
                font-size: 2.5rem;
                color: #2C3E50;
                margin-bottom: 20px;
            }

            .success-box p {
                font-size: 1.1rem;
                color: #7f8c8d;
                margin-bottom: 30px;
            }

        .icon {
            font-size: 6rem;
            color: #2C3E50;
            margin-bottom: 20px;
        }

        /* Button Styling */
        .btn-redirect {
            background-color: #2C3E50;
            color: #ffffff;
            padding: 12px 25px;
            font-size: 1.1rem;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
        }

            .btn-redirect:hover {
                background-color: #34495e;
                transform: scale(1.05);
            }

        .footer {
            position: fixed;
            bottom: 20px;
            width: 100%;
            text-align: center;
            font-size: 0.9rem;
            color: #7f8c8d;
        }

    </style>
</head>
<body>

    <div class="success-container">
        <div class="success-box">
            <!-- Success Icon -->
            <div class="icon">
                <i class="bi bi-check-circle"></i>
            </div>

            <!-- Success Message -->
            <h1>Email Sent Successfully!</h1>
            <p>Your password reset link has been sent to your registered email successfully. Login to you email and follow the instructions.</p>

            <!-- Redirect Button to go to login page -->
            <a href="/VT/Supplier/Login" class="btn-redirect">Go to Login</a>
        </div>
    </div>

    <!-- Footer Message -->
    <div class="footer">
        <p>© 2024 Your Company | All Rights Reserved</p>
    </div>

    <!-- Bootstrap Icons for Success Icon -->


    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.min.js"></script>

    <script>
        // Prevent user from going back to the Password Change Success page
        window.history.pushState(null, "", window.location.href);
        window.onpopstate = function () {
            window.history.pushState(null, "", window.location.href);
        };
    </script>
</body>
</html>
