@model NextOnServices.Infrastructure.ViewModels.Supplier.SupplierDashboardViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Centralized Notifications - Supplier Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/css/vt/blockuisupplier.css" rel="stylesheet" />
    <link href="~/VT/css/chatPanel.css" rel="stylesheet" />

    <style>
        .navbar-custom {
            background-color: #2C3E50;
        }

        .navbar-custom .navbar-brand, .navbar-custom .nav-link, .navbar-custom .vendor-info {
            color: #fff;
        }

        .dashboard-container {
            margin-top: 20px;
            padding-bottom: 100px;
        }

        .notifications-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #e9ecef;
        }

        .notification-filters {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
            align-items: center;
            flex-wrap: wrap;
        }

        .notification-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .notification-item-page {
            background: #fff;
            border: 1px solid #e9ecef;
            border-radius: 0.5rem;
            padding: 1rem 1.25rem;
            margin-bottom: 1rem;
            transition: all 0.2s ease;
            cursor: pointer;
            position: relative;
        }

        .notification-item-page:hover {
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            border-color: #007bff;
        }

        .notification-item-page.unread {
            background-color: #e7f3ff;
            border-left: 4px solid #007bff;
        }

        .notification-item-page.project-change {
            border-left-color: #17a2b8;
        }

        .notification-item-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 0.5rem;
        }

        .notification-item-title {
            font-weight: 600;
            font-size: 1rem;
            color: #212529;
            margin-bottom: 0.25rem;
        }

        .notification-item-project {
            color: #007bff;
            font-weight: 500;
        }

        .notification-item-project.project-change-icon {
            color: #17a2b8;
        }

        .notification-item-message {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            line-height: 1.5;
        }

        .notification-item-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.85rem;
            color: #adb5bd;
        }

        .notification-item-sender {
            font-weight: 500;
            color: #495057;
        }

        .notification-item-time {
            color: #adb5bd;
        }

        .notification-pagination {
            margin-top: 2rem;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 1rem;
        }

        .empty-notifications {
            text-align: center;
            padding: 4rem 2rem;
            color: #6c757d;
        }

        .empty-notifications i {
            font-size: 4rem;
            margin-bottom: 1rem;
            color: #dee2e6;
        }

        .notification-badge {
            background-color: #007bff;
            color: #fff;
            border-radius: 0.25rem;
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
            font-weight: 600;
            margin-left: 0.5rem;
        }

        .notification-badge.project-change {
            background-color: #17a2b8;
        }

        .notification-icon-link {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 42px;
            height: 42px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
            order: -1;
            position: relative;
        }

        .notification-icon-link:hover {
            background-color: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.4);
            transform: scale(1.1);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .notification-icon-link.active {
            background-color: rgba(13, 110, 253, 0.3);
            border-color: rgba(13, 110, 253, 0.5);
        }

        .notification-icon-link i {
            font-size: 1.2rem;
            color: #fff;
            transition: transform 0.3s ease;
        }

        .notification-icon-link:hover i {
            transform: rotate(-15deg);
        }

        .notification-toast {
            animation: slideInRight 0.3s ease-out;
        }

        @@keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: #2C3E50;
            color: #fff;
            padding: 10px 0;
            text-align: center;
            z-index: 1000;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <a class="navbar-brand" href="#" style="padding-top: 0px;padding-bottom: 0px;">
            <img src="/LoginRoot/NextonLogo.png" class="mr-2" alt="logo" style="height:40px;">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav w-100 justify-content-center">
                <li class="nav-item">
                    <a class="nav-link" href="/VT/Supplier/Dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/VT/Supplier/Profile"><i class="fas fa-user"></i> Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/VT/Supplier/ChangePassword"><i class="fas fa-key"></i> Change Password</a>
                </li>
            </ul>

            <div class="vendor-info ml-auto d-flex align-items-center">
                <a class="nav-link position-relative notification-icon-link active" href="/VT/Supplier/Notifications" style="margin-right: 1rem;" title="View Notifications">
                    <i class="fas fa-bell"></i>
                    <span class="badge badge-danger badge-pill notification-count-badge" id="navbarNotificationBadge" style="display: none; position: absolute; top: 0; right: 0; transform: translate(25%, -25%); font-size: 0.7rem; min-width: 18px; height: 18px; line-height: 18px;">0</span>
                </a>
                <span class="mr-3">Welcome, <strong>@Model?.Supplier?.Name</strong></span>
                <a href="/VT/Supplier/Login" style=" white-space: nowrap;" class="btn btn-sm btn-outline-light"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </div>
    </nav>

    <!-- Notifications Content -->
    <div class="container dashboard-container">
        <div class="notifications-header">
            <h2 class="mb-2"><i class="fas fa-bell mr-2"></i>Centralized Notifications</h2>
            <p class="text-muted mb-0">View all project updates and messages across all your projects in one place</p>
        </div>

        <!-- Filters -->
        <div class="notification-filters">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="notificationFilter" id="filterAll" value="all" checked>
                <label class="form-check-label" for="filterAll">All Notifications</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="notificationFilter" id="filterUnread" value="unread">
                <label class="form-check-label" for="filterUnread">Unread Only</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="notificationFilter" id="filterProjectChanges" value="changes">
                <label class="form-check-label" for="filterProjectChanges">Project Changes Only</label>
            </div>
            <div class="ml-auto">
                <button type="button" class="btn btn-sm btn-outline-primary" id="refreshNotifications">
                    <i class="fas fa-sync-alt mr-1"></i> Refresh
                </button>
            </div>
        </div>

        <!-- Notification List -->
        <div id="notificationsContainer">
            <div class="empty-notifications">
                <i class="fas fa-spinner fa-spin"></i>
                <p class="mb-0">Loading notifications...</p>
            </div>
        </div>

        <!-- Pagination -->
        <div class="notification-pagination" id="notificationPagination" style="display: none;">
            <button type="button" class="btn btn-outline-primary" id="prevPage" disabled>
                <i class="fas fa-chevron-left"></i> Previous
            </button>
            <span id="pageInfo" class="mx-3">Page 1 of 1</span>
            <button type="button" class="btn btn-outline-primary" id="nextPage" disabled>
                Next <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>

    @await Html.PartialAsync("_ProjectChatPanel")

    <!-- Footer -->
    <footer class="text-center mt-5">
        <p>&copy; 2024 Nexton Services. All rights reserved.</p>
    </footer>

    <!-- Bootstrap and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/customJS/Common.js"></script>
    <script src="~/VT/js/chatPanel.js"></script>
    <script src="~/VT/js/notificationBadge.js"></script>
    <script src="~/VT/js/centralizedNotifications.js"></script>
</body>
</html>

